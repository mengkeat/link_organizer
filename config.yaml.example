# Link Organizer Configuration
# Copy this file to config.yaml and customize as needed.
# All settings are optional - defaults will be used if not specified.

# Classification settings for AI-powered content analysis
classification:
  # Categories for classifying links
  # These are used by the LLM to categorize content
  categories:
    - Technology
    - Science
    - AI/ML
    - Programming
    - Research
    - Tutorial
    - News
    - Blog
    - Documentation
    - Business
    - Design
    - Security
    - Data Science
    - Web Development

  # Content type classifications
  # Describes the format/purpose of the content
  content_types:
    - tutorial
    - guide
    - documentation
    - research_paper
    - blog_post
    - news_article
    - reference
    - course
    - tool

# Crawler settings for fetching and processing links
crawler:
  # Directory to store downloaded content
  data_dir: dat

  # Index file for tracking link status and metadata
  index_file: index.json

  # Standalone classifications export file
  classifications_file: classifications.json

  # Maximum retry attempts for failed requests
  max_retries: 3

  # Number of parallel workers for classification
  classification_workers: 5

  # Number of parallel workers for fetching content
  fetch_workers: 5

  # Delay between requests in seconds (to avoid rate limiting)
  request_delay: 1.0

  # Enable Terminal User Interface during crawling
  enable_tui: false

# Memory system settings (topic routing + canonical per-link markdown notes)
memory:
  # Root output directory for memory artifacts
  output_dir: memory

  # Topic markdown notes subdirectory
  topics_subdir: topics

  # Per-link canonical markdown notes subdirectory
  links_subdir: links

  # Max characters to persist in each per-link note content section
  link_note_max_chars: 120000

  # Topic routing similarity threshold
  similarity_threshold: 0.75

  # Embedding model used for routing
  embedding_model: openrouter/openai/text-embedding-3-small

# Default input file containing links to process
default_input_file: links.md
